@page
@model Mirrorly.Pages.Mua.EditServiceModel
@{
}
<h2 class="btn-pink" text-align:center; margin-bottom:20px; "> Thêm dịch vụ mới</h2>

<form method="post" class="service-form">
    <div class="form-group">
        <label>Tên dịch vụ</label>
        <input asp-for="Service.Name" class="form-control" />
        <span asp-validation-for="Service.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mô tả</label>
        <textarea asp-for="Service.Description" class="form-control"></textarea>
        <span asp-validation-for="Service.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Giá cơ bản</label>
        <input asp-for="Service.BasePrice" class="form-control" />
        <span asp-validation-for="Service.BasePrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Đơn vị tiền tệ</label>
        <input asp-for="Service.Currency" class="form-control" value="VND" />
        <span asp-validation-for="Service.Currency" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Thời lượng (phút)</label>
        <input asp-for="Service.DurationMin" class="form-control" />
        <span asp-validation-for="Service.DurationMin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Danh mục</label>
        <select asp-for="Service.CategoryId" asp-items="Model.Categories" class="form-control"></select>
        <span asp-validation-for="Service.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-pink">💾 Lưu</button>
    <a asp-page="Services" class="btn btn-cancel">⬅ Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background: #f9f9fb;
    }

    h2 {
        font-size: 24px;
        font-weight: 600;
        color: #d63384;
        text-align: center;
        margin-bottom: 25px;
    }

    .service-form {
        max-width: 600px;
        margin: auto;
        padding: 25px 30px;
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }

        .service-form:hover {
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        }

    .form-group {
        margin-bottom: 18px;
    }

    label {
        font-weight: 600;
        color: #444;
        margin-bottom: 6px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #ddd;
        transition: all 0.2s ease-in-out;
        font-size: 15px;
    }

        .form-control:focus {
            border-color: #d63384;
            outline: none;
            box-shadow: 0 0 0 3px rgba(214,51,132,0.15);
        }

    .text-danger {
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }

    .btn-pink {
        background: linear-gradient(135deg, #ff6a9f, #d63384);
        color: #fff;
        border: none;
        padding: 12px 28px;
        border-radius: 30px; /* bo tròn nhiều hơn */
        cursor: pointer;
        font-weight: 600;
        font-size: 16px;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 12px rgba(214, 51, 132, 0.35);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 6px; /* tạo khoảng cách cho icon 💾 */
    }

        .btn-pink:hover {
            background: linear-gradient(135deg, #d63384, #a5115c);
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 6px 16px rgba(214, 51, 132, 0.45);
        }


    .btn-cancel {
        margin-left: 12px;
        padding: 10px 22px;
        border-radius: 10px;
        background: #f1f1f1;
        color: #444;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .btn-cancel:hover {
            background: #e0e0e0;
            color: #222;
        }
</style>

