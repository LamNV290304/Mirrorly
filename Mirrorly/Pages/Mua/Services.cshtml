@page
@model Mirrorly.Pages.Mua.ServicesModel
@{
}
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fff;
        color: #444;
        margin: 0;
        padding: 0;
    }

    .profile-section {
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

        .profile-section h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #d63384;
            font-size: 28px;
        }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
    }

    .service-card {
        background: linear-gradient(135deg, #fff, #ffe6f0);
        border: 1px solid #f8cce0;
        border-radius: 16px;
        padding: 20px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(214, 51, 132, 0.15);
        }

        .service-card h3 {
            font-size: 20px;
            color: #c2185b;
            margin-bottom: 10px;
        }

        .service-card p {
            margin: 6px 0;
            color: #555;
        }

        .service-card .price {
            font-weight: bold;
            color: #d63384;
            font-size: 18px;
        }

        .service-card .duration,
        .service-card .category {
            font-size: 14px;
            color: #777;
        }

    .crud-btn {
        display: inline-block;
        margin: 5px 3px;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 14px;
        text-decoration: none;
        transition: background 0.3s;
    }

    .btn-add {
        background: #d63384;
        color: #fff;
        padding: 10px 18px;
        font-weight: bold;
        display: inline-block;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            background: #a5115c;
        }

    .btn-edit {
        background: #ff99cc;
        color: #fff;
    }

        .btn-edit:hover {
            background: #ff66b2;
        }

    .btn-delete {
        background: #ff4d6d;
        color: #fff;
    }

        .btn-delete:hover {
            background: #e60033;
        }
</style>

<section class="profile-section">
    <h2>Dịch vụ cung cấp</h2>

    <a asp-page="/Mua/CreateServices" class="btn-add">➕ Thêm dịch vụ</a>

    <div class="services-grid">
        @foreach (var se in Model.Services)
        {
            <div class="service-card">
                <h3>@se.Name</h3>
                <p>@se.Description</p>
                <p class="price">@se.BasePrice @se.Currency</p>
                <p class="duration">⏱ @se.DurationMin phút</p>
                <p class="category">📂 @se.Category.CategoryName</p>

                <!-- Nút CRUD -->
                <div>
                    <a asp-page="/Mua/EditService" asp-route-id="@se.ServiceId" class="crud-btn btn-edit">✏️ Sửa</a>
                    <a asp-page="/Mua/DeleteService" asp-route-id="@se.ServiceId" class="crud-btn btn-delete">🗑 Xóa</a>
                </div>
            </div>
        }
    </div>
</section>
