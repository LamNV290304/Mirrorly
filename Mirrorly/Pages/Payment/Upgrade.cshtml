@page
@model Mirrorly.Pages.Payment.UpgradeModel
@{
    var showSuccess = (bool)(ViewData["ShowSuccess"] ?? false);
}

<div class="qr-container text-center">
    <h2 class="page-title">Nâng cấp tài khoản</h2>
    <img src="/uploads/QRcode.jpg" alt="QR Code" class="qr-image" />
    <p class="mt-3 upgrade-note"><strong>Vui lòng quét mã QR để hoàn tất nâng cấp</strong></p>
</div>


<style>
    body {
        background: #fff;
        font-family: 'Segoe UI', sans-serif;
        color: #333;
    }

    .page-title {
        color: #e75480;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .qr-container {
        padding: 30px;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 12px rgba(231, 84, 128, 0.2);
        max-width: 400px;
        margin: 40px auto;
    }

    .qr-image {
        width: 250px;
        border: 5px solid #ffe4ec;
        border-radius: 12px;
        padding: 10px;
        background: #fff;
    }

    .upgrade-note {
        color: #555;
        font-size: 1.1rem;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var showSuccess = '@showSuccess'.toLowerCase() === 'true';
        if (showSuccess) {
            var modal = new bootstrap.Modal(document.getElementById('successModal'));
            modal.show();
        }
    });
</script>
