<!-- chèn 1 lần: expose giá trị đăng nhập -->
<script>
    // Razor: xuất ra boolean JS (kết quả: true hoặc false)
    const isLoggedIn = @(isLoggedIn ? "true" : "false");
</script>

<script>
    (function () {
      // Nếu user đã login thì không cần làm gì
      if (isLoggedIn === true || isLoggedIn === "true") return;

      const STORAGE_KEY = 'mirrorly_guest_color_changes';
      const LAST_COLOR_KEY = STORAGE_KEY + '_last';
      const LIMIT = 3;

      // restore
      let count = parseInt(sessionStorage.getItem(STORAGE_KEY) || '0', 10);
      let lastColor = sessionStorage.getItem(LAST_COLOR_KEY) || null;

      // helper: toast / gentle UI
      function showToast(msg) {
        let t = document.getElementById('mirrorly-guest-toast');
        if (!t) {
          t = document.createElement('div');
          t.id = 'mirrorly-guest-toast';
          t.style.cssText = 'position:fixed;bottom:24px;right:24px;background:#fff;padding:10px 14px;border-radius:10px;box-shadow:0 8px 24px rgba(0,0,0,0.12);font-weight:600;color:#333;z-index:9999;transition:opacity .25s';
          document.body.appendChild(t);
        }
        t.textContent = msg;
        t.style.opacity = '1';
        clearTimeout(t._hideTimer);
        t._hideTimer = setTimeout(() => { t.style.opacity = '0'; }, 2000);
      }

      // attach after DOM ready
      function init() {
        const palette = document.getElementById('color-palette');
        if (!palette) return;

        palette.addEventListener('click', (ev) => {
          const sw = ev.target.closest('.color-swatch');
          if (!sw) return;

          // try to derive a stable color id: data-color attribute preferred
          const colorId = sw.getAttribute('data-color') || sw.style.backgroundColor || sw.id || sw.className;

          if (!colorId) return;

          // If same as last chosen color -> ignore (no increment)
          if (colorId === lastColor) {
            // optional: still show a subtle feedback but don't increment
            return;
          }

          lastColor = colorId;
          sessionStorage.setItem(LAST_COLOR_KEY, lastColor);

          count = parseInt(sessionStorage.getItem(STORAGE_KEY) || '0', 10) + 1;
          sessionStorage.setItem(STORAGE_KEY, String(count));

          // show short feedback
          showToast(`Bạn đã thử màu ${count}/${LIMIT}.`);

          if (count >= LIMIT) {
            // clear tracking so user won't be stuck if they cancel login
            sessionStorage.removeItem(STORAGE_KEY);
            sessionStorage.removeItem(LAST_COLOR_KEY);

            // small delay for UX, then redirect
            setTimeout(() => {
              window.location.href = '/Auth/Login';
            }, 600);
          }
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', init);
      } else {
        init();
      }
    })();
</script>
